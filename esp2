-- =========================================================
-- Phantom Clone: Real Position Hider
-- =========================================================

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer

-- –ù–∞—Å—Ç—Ä–æ–π–∫–∏
local IS_ACTIVE = false
local SHOW_MENU = false
local REAL_POSITION = Vector3.new(0, 0, 0)
local FAKE_POSITION = Vector3.new(0, 0, 0)
local CLONE_TRANSPARENCY = 0.7

-- –°—Å—ã–ª–∫–∏ –Ω–∞ –æ–±—ä–µ–∫—Ç—ã
local Character = player.Character or player.CharacterAdded:Wait()
local HumanoidRootPart = Character:WaitForChild("HumanoidRootPart")
local fakeClone = nil

-- –°–æ–∑–¥–∞–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "PhantomMenu"
screenGui.Parent = player.PlayerGui
screenGui.Enabled = SHOW_MENU

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 300, 0, 200)
frame.Position = UDim2.new(0.5, -150, 0.5, -100)
frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
frame.BorderSizePixel = 0
frame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Text = "Phantom Clone Settings"
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
title.TextColor3 = Color3.new(1, 1, 1)
title.Parent = frame

local toggleBtn = Instance.new("TextButton")
toggleBtn.Text = "START"
toggleBtn.Size = UDim2.new(0.8, 0, 0, 40)
toggleBtn.Position = UDim2.new(0.1, 0, 0.2, 0)
toggleBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
toggleBtn.TextColor3 = Color3.new(1, 1, 1)
toggleBtn.Parent = frame

local menuBtn = Instance.new("TextButton")
menuBtn.Text = "HIDE MENU"
menuBtn.Size = UDim2.new(0.8, 0, 0, 40)
menuBtn.Position = UDim2.new(0.1, 0, 0.5, 0)
menuBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
menuBtn.TextColor3 = Color3.new(1, 1, 1)
menuBtn.Parent = frame

-- –§—É–Ω–∫—Ü–∏—è —Å–æ–∑–¥–∞–Ω–∏—è —Ñ–∞–Ω—Ç–æ–º–Ω–æ–≥–æ –∫–ª–æ–Ω–∞
local function createFakeClone()
    if fakeClone then fakeClone:Destroy() end
    
    fakeClone = Character:Clone()
    
    -- –î–µ–ª–∞–µ–º –∫–ª–æ–Ω –ø–æ–ª—É–ø—Ä–æ–∑—Ä–∞—á–Ω—ã–º –∏ –Ω–µ–º–∞—Ç–µ—Ä–∏–∞–ª—å–Ω—ã–º
    for _, part in ipairs(fakeClone:GetDescendants()) do
        if part:IsA("BasePart") then
            part.CanCollide = false
            part.CanTouch = false
            part.CanQuery = false
            part.Transparency = CLONE_TRANSPARENCY
            part.Anchored = true
        elseif part:IsA("Decal") then
            part.Transparency = CLONE_TRANSPARENCY
        end
    end
    
    -- –£–¥–∞–ª—è–µ–º –Ω–µ–Ω—É–∂–Ω—ã–µ —Å–∫—Ä–∏–ø—Ç—ã –∏ –∫–æ–Ω—Ç—Ä–æ–ª–ª–µ—Ä—ã
    for _, child in ipairs(fakeClone:GetDescendants()) do
        if child:IsA("Script") or child:IsA("LocalScript") then
            child:Destroy()
        end
    end
    
    fakeClone.Parent = workspace
    fakeClone.Name = "PhantomClone_" .. player.Name
    
    return fakeClone
end

-- –û—Å–Ω–æ–≤–Ω–∞—è —Ñ—É–Ω–∫—Ü–∏—è –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è –ø–æ–∑–∏—Ü–∏–π
local function updatePositions()
    if not IS_ACTIVE or not HumanoidRootPart or not fakeClone then return end
    
    -- –û–±–Ω–æ–≤–ª—è–µ–º —Ä–µ–∞–ª—å–Ω—É—é –ø–æ–∑–∏—Ü–∏—é (–≥–¥–µ –≤—ã –Ω–∞ —Å–∞–º–æ–º –¥–µ–ª–µ)
    REAL_POSITION = HumanoidRootPart.Position
    
    -- –ü–æ–∑–∏—Ü–∏–æ–Ω–∏—Ä—É–µ–º –∫–ª–æ–Ω –Ω–∞ —Ñ–µ–π–∫–æ–≤–æ–π –ø–æ–∑–∏—Ü–∏–∏
    local fakeHRP = fakeClone:FindFirstChild("HumanoidRootPart")
    if fakeHRP then
        fakeHRP.CFrame = CFrame.new(FAKE_POSITION)
    end
    
    -- –î–ª—è –¥—Ä—É–≥–∏—Ö –∏–≥—Ä–æ–∫–æ–≤: –ø–æ–∫–∞–∑—ã–≤–∞–µ–º –∫–ª–æ–Ω –Ω–∞ FAKE_POSITION
    -- –î–ª—è –≤–∞—Å: –≤—ã –æ—Å—Ç–∞–µ—Ç–µ—Å—å –Ω–∞ REAL_POSITION
end

-- –ó–∞–ø—É—Å–∫/–æ—Å—Ç–∞–Ω–æ–≤–∫–∞ —Å–∏—Å—Ç–µ–º—ã
local function toggleSystem()
    IS_ACTIVE = not IS_ACTIVE
    
    if IS_ACTIVE then
        -- –ó–∞–ø–æ–º–∏–Ω–∞–µ–º —Ç–µ–∫—É—â—É—é –ø–æ–∑–∏—Ü–∏—é –∫–∞–∫ —Ñ–µ–π–∫–æ–≤—É—é
        FAKE_POSITION = HumanoidRootPart.Position
        REAL_POSITION = FAKE_POSITION
        
        -- –°–æ–∑–¥–∞–µ–º –∫–ª–æ–Ω–∞
        createFakeClone()
        toggleBtn.Text = "STOP"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
        
        print("üîÑ Phantom Clone –∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω!")
        print("üìç –§–µ–π–∫–æ–≤–∞—è –ø–æ–∑–∏—Ü–∏—è: " .. tostring(FAKE_POSITION))
        
    else
        -- –£–¥–∞–ª—è–µ–º –∫–ª–æ–Ω–∞
        if fakeClone then
            fakeClone:Destroy()
            fakeClone = nil
        end
        
        toggleBtn.Text = "START"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
        
        print("üîÑ Phantom Clone –¥–µ–∞–∫—Ç–∏–≤–∏—Ä–æ–≤–∞–Ω")
    end
end

-- –ü–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –º–µ–Ω—é
local function toggleMenu()
    SHOW_MENU = not SHOW_MENU
    screenGui.Enabled = SHOW_MENU
    menuBtn.Text = SHOW_MENU and "HIDE MENU" or "SHOW MENU"
end

-- –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ –∫–Ω–æ–ø–æ–∫
toggleBtn.MouseButton1Click:Connect(toggleSystem)
menuBtn.MouseButton1Click:Connect(toggleMenu)

-- –ì–æ—Ä—è—á–∏–µ –∫–ª–∞–≤–∏—à–∏
UserInputService.InputBegan:Connect(function(input)
    if input.KeyCode == Enum.KeyCode.F9 then
        toggleSystem()
    elseif input.KeyCode == Enum.KeyCode.F10 then
        toggleMenu()
    end
end)

-- –û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è
RunService.Heartbeat:Connect(updatePositions)

-- –û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Ä–µ—Å–ø–∞—É–Ω–∞
player.CharacterAdded:Connect(function(newCharacter)
    Character = newCharacter
    HumanoidRootPart = Character:WaitForChild("HumanoidRootPart")
    
    -- –ï—Å–ª–∏ —Å–∏—Å—Ç–µ–º–∞ –±—ã–ª–∞ –∞–∫—Ç–∏–≤–Ω–∞, –ø–µ—Ä–µ—Å–æ–∑–¥–∞–µ–º –∫–ª–æ–Ω–∞
    if IS_ACTIVE then
        task.wait(2)
        createFakeClone()
        FAKE_POSITION = HumanoidRootPart.Position
    end
end)

print("üëª Phantom Clone Script –∑–∞–≥—Ä—É–∂–µ–Ω!")
print("üéÆ F9 - –í–∫–ª/–í—ã–∫–ª —Å–∏—Å—Ç–µ–º—É")
print("üéÆ F10 - –ü–æ–∫–∞–∑–∞—Ç—å/—Å–∫—Ä—ã—Ç—å –º–µ–Ω—é")
print("üìç –í—ã –æ—Å—Ç–∞–µ—Ç–µ—Å—å –Ω–∞ —Ä–µ–∞–ª—å–Ω–æ–π –ø–æ–∑–∏—Ü–∏–∏, –¥—Ä—É–≥–∏–µ –≤–∏–¥—è—Ç –∫–ª–æ–Ω–∞ –Ω–∞ —Ñ–µ–π–∫–æ–≤–æ–π")
