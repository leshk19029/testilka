local Zypher = loadstring(game:HttpGet("https://raw.githubusercontent.com/leshk19029/testilka/refs/heads/main/library"))()

-- Создаем экземпляр библиотеки
local Library = Zypher.new("Zypher Menu", Enum.KeyCode.RightShift, Color3.fromRGB(65, 105, 225))

-- Создаем вкладки
local MainTab = Library:CreateTab("Main")
local CombatTab = Library:CreateTab("Combat")
local VisualsTab = Library:CreateTab("Visuals")
local SettingsTab = Library:CreateTab("Settings")

-- Переменные для хранения состояний
local ESPEnabled = false
local AimbotEnabled = false
local SpeedEnabled = false
local JumpEnabled = false

-- Главная вкладка
Library:CreateLabel(MainTab, "Welcome to Zypher Menu!")
Library:CreateLabel(MainTab, "Version: 1.0")

-- Кнопка с примером функционала
Library:CreateButton(MainTab, "Teleport to Spawn", function()
    local player = game.Players.LocalPlayer
    if player.Character and player.Character:FindFirstChild("HumanoidRootPart") then
        player.Character.HumanoidRootPart.CFrame = CFrame.new(0, 5, 0)
        print("Teleported to spawn!")
    end
end)

-- Переключатель ESP
Library:CreateToggle(MainTab, "ESP", false, function(value)
    ESPEnabled = value
    print("ESP:", value and "Enabled" or "Disabled")
    -- Здесь будет код ESP
end)

-- Слайдер для изменения скорости
local SpeedSlider = Library:CreateSlider(MainTab, "Walk Speed", 16, 100, 16, function(value)
    local player = game.Players.LocalPlayer
    if player.Character and player.Character:FindFirstChild("Humanoid") then
        player.Character.Humanoid.WalkSpeed = value
    end
end)

-- Вкладка Combat
Library:CreateToggle(CombatTab, "Aimbot", false, function(value)
    AimbotEnabled = value
    print("Aimbot:", value and "Enabled" or "Disabled")
    -- Код аимбота здесь
end)

Library:CreateSlider(CombatTab, "Aimbot FOV", 1, 360, 90, function(value)
    print("Aimbot FOV set to:", value)
end)

Library:CreateToggle(CombatTab, "Trigger Bot", false, function(value)
    print("Trigger Bot:", value and "Enabled" or "Disabled")
end)

-- Вкладка Visuals
Library:CreateToggle(VisualsTab, "Wallhack", false, function(value)
    print("Wallhack:", value and "Enabled" or "Disabled")
end)

Library:CreateToggle(VisualsTab, "Fullbright", false, function(value)
    if value then
        game.Lighting.Ambient = Color3.new(1, 1, 1)
        game.Lighting.FogEnd = 100000
    else
        game.Lighting.Ambient = Color3.new(0.5, 0.5, 0.5)
        game.Lighting.FogEnd = 1000
    end
end)

Library:CreateSlider(VisualsTab, "Field of View", 70, 120, 70, function(value)
    local player = game.Players.LocalPlayer
    if player:FindFirstChild("Camera") then
        player.Camera.FieldOfView = value
    end
end)

-- Вкладка Settings
Library:CreateButton(SettingsTab, "Save Configuration", function()
    print("Configuration saved!")
end)

Library:CreateButton(SettingsTab, "Load Configuration", function()
    print("Configuration loaded!")
end)

Library:CreateToggle(SettingsTab, "Auto Save", true, function(value)
    print("Auto Save:", value and "Enabled" or "Disabled")
end)

-- Дополнительные функции для мобильной оптимизации
if Library.IS_MOBILE then
    Library:CreateLabel(SettingsTab, "Mobile Settings")
    
    Library:CreateSlider(SettingsTab, "UI Scale", 0.5, 1.5, 1, function(value)
        Library.MainFrame.Size = UDim2.new(0, 500 * value, 0, 350 * value)
    end)
    
    Library:CreateToggle(SettingsTab, "Vibration Feedback", true, function(value)
        print("Vibration:", value and "Enabled" or "Disabled")
    end)
end

-- Функция для демонстрации работы меню
Library:CreateButton(MainTab, "Test All Features", function()
    print("Testing all features...")
    
    -- Тестируем переключатели
    ESPEnabled = not ESPEnabled
    print("ESP toggled to:", ESPEnabled)
    
    -- Тестируем слайдер
    SpeedSlider.Value = 50
    print("Speed set to: 50")
end)

-- Информационная метка
Library:CreateLabel(MainTab, "Press RightShift to toggle menu")
if Library.IS_MOBILE then
    Library:CreateLabel(MainTab, "Use the button in the corner to toggle menu")
end
