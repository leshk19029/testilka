local UI = require('https://raw.githubusercontent.com/leshk19029/testilka/refs/heads/main/library')

-- Создание окна
local window = UI:CreateWindow("Мое окно")

-- Создание кнопки
UI:CreateButton(window.Container, "Нажми меня", function()
    print("Кнопка нажата!")
end)

-- Создание переключателя
local toggle = UI:CreateToggle(window.Container, "Включить что-то", false, function(state)
    print("Переключатель:", state)
end)

-- Создание слайдера
local slider = UI:CreateSlider(window.Container, "Громкость", 0, 100, 50, function(value)
    print("Значение слайдера:", value)
end)

-- Создание текстового поля
UI:CreateTextBox(window.Container, "", "Введите текст...", function(text)
    print("Введенный текст:", text)
end)

-- Создание метки
UI:CreateLabel(window.Container, "Это метка")
