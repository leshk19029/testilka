-- Загрузка библиотеки Zypher
local Zypher = loadstring(game:HttpGet("https://raw.githubusercontent.com/teppyboy/RbxScripts/master/Misc/UI_Libraries/Zypher/Library.lua"))()

-- Создание окна меню
local Window = Zypher:CreateWindow({
    Name = "Мое меню",
    LoadingTitle = "Загрузка...",
    LoadingSubtitle = "Меню загружается",
    ConfigurationSaving = {
        Enabled = false
    }
})

-- Создание вкладки Main
local MainTab = Window:CreateTab("Main", nil)

-- Создание секции в вкладке Main
local MainSection = MainTab:CreateSection("Функции")

-- Переменная для хранения состояния ESP
local ESPEnabled = false

-- Функция для включения/выключения ESP (заглушка)
local function ToggleESP()
    ESPEnabled = not ESPEnabled
    if ESPEnabled then
        print("ESP включен")
        -- Здесь будет код для включения ESP
    else
        print("ESP выключен")
        -- Здесь будет код для выключения ESP
    end
end

-- Создание переключателя ESP
MainSection:CreateToggle({
    Name = "ESP",
    CurrentValue = false,
    Flag = "ESP_Toggle",
    Callback = function(Value)
        ESPEnabled = Value
        if Value then
            print("ESP включен")
            -- Здесь будет код для включения ESP
        else
            print("ESP выключен")
            -- Здесь будет код для выключения ESP
        end
    end
})

-- Альтернативный вариант с кнопкой
MainSection:CreateButton({
    Name = "Включить/Выключить ESP",
    Interact = 'Click',
    Callback = function()
        ToggleESP()
    end
})
