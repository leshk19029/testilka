local Library = require(script.Parent.Library) -- Предполагается, что библиотека находится в этом месте

-- Создаем главное меню
local MainMenu = Library:CreateMain({
    projName = "ESP Menu",
    Resizable = true,
    MinSize = UDim2.new(0, 700, 0, 460),
    MaxSize = UDim2.new(0, 900, 0, 600)
})

-- Создаем вкладку Main
local MainTab = MainMenu:CreateCategory("Main")

-- Создаем секцию в вкладке Main
local ESPsection = MainTab:CreateSection("ESP Settings")

-- Создаем переключатель ESP
local ESPToggle = ESPsection:Create("Toggle", "ESP", function(state)
    -- Функция обратного вызова для переключателя ESP
    print("ESP:", state)
    -- Здесь будет код для включения/выключения ESP
end, {
    default = false -- По умолчанию выключено
})

-- Дополнительные настройки ESP (опционально)
local PlayerESPToggle = ESPsection:Create("Toggle", "Player ESP", function(state)
    print("Player ESP:", state)
end, {
    default = false
})

local NameTagsToggle = ESPsection:Create("Toggle", "Name Tags", function(state)
    print("Name Tags:", state)
end, {
    default = false
})
