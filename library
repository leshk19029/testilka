local SimpleUI = loadstring(game:HttpGet("https://raw.githubusercontent.com/your-repo/simple-ui/main/lib.lua"))()

local window = SimpleUI:CreateWindow({
    Title = "My GUI"
})

local mainTab = window:AddTab("Main")
local combatTab = window:AddTab("Combat")
local visualsTab = window:AddTab("Visuals")

mainTab:AddLabel("Welcome to SimpleUI")
mainTab:AddButton({
    Text = "Click Me",
    Callback = function()
        print("Button clicked!")
    end
})

mainTab:AddToggle({
    Text = "Enable Feature",
    Default = false,
    Callback = function(value)
        print("Toggle:", value)
    end
})

mainTab:AddSlider({
    Text = "Slider Example",
    Min = 0,
    Max = 100,
    Default = 50,
    Callback = function(value)
        print("Slider value:", value)
    end
})

mainTab:AddDropdown({
    Text = "Dropdown",
    Options = {"Option 1", "Option 2", "Option 3"},
    Default = "Option 1",
    Callback = function(value)
        print("Selected:", value)
    end
})

-- Toggle window visibility
window:Toggle()
